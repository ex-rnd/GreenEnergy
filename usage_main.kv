<UsageCard>
    elevation: 20
    md_bg_color: [59/255,45/255,36/255,1] #[59/255,35/255,26/255,1]
    radius: [8]
    #size_hint_y: .2
    #size_hint_y: .1

    MDFloatLayout:
        id: bar
        size_hint: .01, .9
        pos_hint: {"center_x": .02, "center_y": .5}
        md_bg_color: 0, 179/255, 0, 1 #md_bg_color: [39/255,35/255,26/255,1]

    MDLabel:
        id: appliance
        text: root.appliance
        markup: True
        font_name: "Arial"
        font_size: "20sp"
        size_hint_x: .8
        pos_hint: {"center_x": .46, "center_y": .9}



    MDLabel:
        id: quantity
        text: root.quantity
        font_name: "Arial"
        font_size: "20sp"
        markup: True
        size_hint_x: .9
        line_height: .7
        pos_hint: {"center_x": .51, "center_y": .6}

    MDLabel:
        id: hours
        text: root.hours
        font_name: "Arial"
        font_size: "20sp"
        markup: True
        size_hint_x: .9
        line_height: .7
        pos_hint: {"center_x": .51, "center_y": .35}

    MDLabel:
        id: wattage
        text: root.wattage
        font_name: "Arial"
        font_size: "20sp"
        markup: True
        size_hint_x: .9
        line_height: .7
        pos_hint: {"center_x": .51, "center_y": .1}


MDScreen:
    date: date
    todo_list: todo_list
    name: "usage_main"
    MDFloatLayout:
        md_bg_color: [39/255,35/255,26/255,1]

        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": .95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color: rgba(52, 0, 231, 255)
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "dashboard"
        MDLabel:
            text: "Usage Data"
            pos_hint: {"center_x": .56, "center_y": .89}
            font_name: "Arial"
            font_size: "35sp"

        MDLabel:
            id: dates
            text: ""
            pos_hint: {"center_x": .565, "center_y": .89}
            font_name: "Arial"
            font_size: "18sp"

        MDIconButton:
            icon: "bell"
            pos_hint: {"center_x": .89, "center_y": .925}
            user_font_size: "30sp"
            md_bg_color: 59/255,35/255,26/255,1
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            #on_release:
                #root.manager.transition.direction = "left"
                #root.manager.current = "add_appliance"
                #app.add_todo()
            on_release:
                app.usage_data()
                #app.add_todo(appliance.text, quantity.text, hours.text, wattage.text)

        ScrollView:
            do_scroll_y: True
            do_scroll_x: False
            size_hint_y: .85
            pos_hint: {"center_x": .5, "y": 0}
            bar_width: 0
            GridLayout:
                id: todo_list
                cols: 1
                height: self.minimum_height
                row_default_height: 80
                size_hint_y: None
                padding: 15, 10
                spacing: 15, 10












